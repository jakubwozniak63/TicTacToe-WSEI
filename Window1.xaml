<Window x:Class="TicTacToe2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe2"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Icon="/NewFolder1/wsei.png"
        Title="Menu" Height="575" Width="300">
    <Grid>

        <Grid.RowDefinitions>

            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        

        <Button   Click="Pvp" Grid.Row="1" >
            <StackPanel>
                <Image HorizontalAlignment="Left"  Source="/NewFolder1/pvp.png" />
            </StackPanel>
        </Button>
        
        <Button     Grid.Row="2" >
            <StackPanel>
                <Image HorizontalAlignment="Left"  Source="/NewFolder1/pve.jpg" />
            </StackPanel>
        </Button>
        
        <Button    Grid.Row="3" >
            <StackPanel>
                <Image HorizontalAlignment="Left" Source="/NewFolder1/res.jpg" />
            </StackPanel>
        </Button>


        <Image Source="NewFolder1/logo.jpg" HorizontalAlignment="Center" VerticalAlignment="top"/>
    </Grid>
</Window>
